<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LogsParser.controller.MainController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <spacing>10.0</spacing>
   
   <!-- Header Section -->
   <Label fx:id="titleLabel" styleClass="title-label" text="Pipeline Logs Reconstruction Tool" />
   <Label fx:id="descriptionLabel" styleClass="description-label" text="Parse randomized log messages and reconstruct pipelines in reverse order" />
   
   <Separator />
   
   <!-- Button Bar -->
   <HBox spacing="10.0">
      <Button fx:id="loadFileButton" onAction="#handleLoadFile" styleClass="primary-button" text="📁 Load File" />
      <Button fx:id="parseButton" onAction="#handleParseLogs" styleClass="success-button" text="🔄 Parse Logs" />
      <Button fx:id="clearButton" onAction="#handleClear" styleClass="danger-button" text="🗑 Clear" />
   </HBox>
   
   <!-- Input Section -->
   <VBox spacing="5.0">
      <Label fx:id="inputLabel" styleClass="section-label" text="Input Logs:" />
      <TextArea fx:id="inputArea" prefRowCount="8"  promptText="Paste log content here or use 'Load File' button...&#10;&#10;Example format:&#10;pipeline_id id encoding [body] next_id" styleClass="input-text-area" />
   </VBox>
   
   <!-- Output Section -->
   <VBox spacing="5.0">
      <Label fx:id="outputLabel" styleClass="section-label" text="Output:" />
      <TextArea fx:id="outputArea" editable="false" prefRowCount="12" styleClass="output-text-area" />
   </VBox>
   
   <!-- Status Bar -->
   <Label fx:id="statusLabel" styleClass="status-label" text="Ready - Load a file or paste log content" />
</VBox> 